<robot name="volta_robot" xmlns:xacro="https://ros.org/wiki/xacro">
    <xacro:macro name="imu" params="frame:=imu topic:=imu update_rate:=50 robot_namespace:=/ tf_pre:=/">
        <joint name="${frame}_joint" type="fixed">
            <parent link="base_link" />
            <child link="${frame}" />
            <origin xyz="0 0 ${base_h/2}" rpy="0 0 0" />
        </joint>

        <link name="${frame}">
            <!-- Visual and Collision missing -->
            <inertial>
                <mass value="0.001"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <inertia ixx="1e-09" ixy="0.0" ixz="0.0" iyy="1e-09" iyz="0.0" izz="1e-09"/>
            </inertial>
        </link>

        <gazebo reference="${frame}">
          <sensor name="imu_sensor" type="imu">
            <always_on>true</always_on>
            <update_rate>${update_rate}</update_rate>
            <plugin name="gazebo_ros_imu" filename="libgazebo_ros_imu_sensor.so">
              <ros>
                <remapping>~/out:=${topic}</remapping>
              </ros>
              <namespace>${robot_namespace}</namespace>
              <body_name>${frame}</body_name>
              <frame_id>${tf_pre}${frame}</frame_id>
              <frame_name>${tf_pre}${frame}</frame_name>
              <topic_name>${topic}</topic_name>
              <xyzOffset>0.0 0.0 0.0</xyzOffset>
              <rpyOffset>0.0 0.0 0.0</rpyOffset>
              <heading_drift>0.0005</heading_drift>
              <gaussian_noise>0.0005</gaussian_noise>
              <always_on>true</always_on>
            </plugin>
          </sensor>
        </gazebo>
    </xacro:macro>
</robot>
